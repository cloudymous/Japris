<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListButtonHome"
    android:onClick="pesanMakanan">

    <ImageView
        android:id="@+id/logoMakanan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_room_service_white_48dp"/>

    <TextView
        android:id="@+id/menuTelepom"
        style="@style/regularTextStyle"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/logoMakanan"
        android:layout_toRightOf="@+id/logoMakanan"
        android:text="@string/order_food"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_chevron_right_white_48dp"/>

</RelativeLayout>